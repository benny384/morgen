public static String generatePassword(String sentence) {
    StringBuilder password = new StringBuilder();
    boolean useUpperCase = true;

    // Split the sentence into words
    String[] words = sentence.split("\\s+");

    // Iterate over the words and add the last character to the password
    for (int i = 0; i < words.length; i++) {
        String word = words[i];
        char lastChar = word.charAt(word.length() - 1);
        if (Character.isLetter(lastChar)) {
            password.append(useUpperCase ? Character.toUpperCase(lastChar) : Character.toLowerCase(lastChar));
            useUpperCase = !useUpperCase;
        }
        if (i < words.length - 1) {
            char nextChar = words[i + 1].charAt(0);
            if (nextChar == ',' || nextChar == '.') {
                password.append(nextChar);
                i++;
            }
        }
    }

    return password.toString();
}
