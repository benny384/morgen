import java.util.ArrayList;
import java.util.List;

public class Kurs {
    private String bezeichnung;
    private int nr;
    private List<Schüler> teilnehmer;

    public Kurs(String bezeichnung, int nr) {
        this.bezeichnung = bezeichnung;
        this.nr = nr;
        this.teilnehmer = new ArrayList<>();
    }

    public List<Schüler> getTeilnehmer() {
        return teilnehmer;
    }

    public Schüler getSchüler(int nr) {
        for (Schüler schüler : teilnehmer) {
            if (schüler.getNr() == nr) {
                return schüler;
            }
        }
        return null;
    }

    public boolean fügeSchülerHinzu(Schüler schüler) {
        return teilnehmer.add(schüler);
    }

    public boolean löscheSchüler(int nr) {
        Schüler schüler = getSchüler(nr);
        if (schüler != null) {
            return teilnehmer.remove(schüler);
        }
        return false;
    }

    public void schülerAusgeben() {
        for (Schüler schüler : teilnehmer) {
            System.out.println(schüler);
        }
    }

    public String getBezeichnung() {
        return bezeichnung;
    }

    public int getNr() {
        return nr;
    }
}