package Schiffeversenken;

public class Main {
    public static void main(String[] args) {
        // Erstelle ein Gameboard-Objekt
        Gameboard gameboard = new Gameboard();

        // Erzeuge ein Schiff
        Schiff ship = new Schiff(3);
        ship.generateCoordinates();

        // Platziere das Schiff auf dem Gameboard
        gameboard.placeGameSchiff(ship);

        // Drucke das Gameboard vor dem Schuss
        System.out.println("Gameboard vor dem Schuss:");
        gameboard.printBoard();

        // FÃ¼hre einen Schuss auf das Schiff durch
        int shotX = 2;
        int shotY = 3;
        Shot shot = new Shot(shotX, shotY);
        if (ship.getCoordinates().contains(new Coordinate(shotX, shotY))) {
            // Das Schiff wurde getroffen
            shot.setHit(true);
            shot.markShipHit(gameboard);
        } else {
            // Das Schiff wurde verfehlt
            System.out.println("Verfehlt!");
        }

        // Drucke das Gameboard nach dem Schuss
        System.out.println("Gameboard nach dem Schuss:");
        gameboard.printBoard();
    }
}
