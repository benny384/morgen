public class TennisSpieler {
    private static int folgeNummer = 1;

    private String name;
    private int alter;
    private TennisSpieler verfolger;
    private int startNummer;

    public TennisSpieler() {
        name = "";
        alter = 0;
        verfolger = null;
        startNummer = folgeNummer++;
    }

    public TennisSpieler(String name, int alter) {
        this();
        this.name = name;
        this.alter = alter;
    }

    public TennisSpieler(String name, int alter, TennisSpieler verfolger) {
        this(name, alter);
        this.verfolger = verfolger;
    }

    public int altersDifferenz(int alter) {
        return Math.abs(alter - this.alter);
    }

    public boolean istLetzter() {
        return verfolger == null;
    }

    public int getStartNummer() {
        return startNummer;
    }

    public String toString() {
        String printText = name + " (" + startNummer + ")";
        if (verfolger != null)
            printText += " liegt vor " + verfolger.toString();
        return printText;
    }

    public static void main(String[] args) {
        TennisSpieler maier = new TennisSpieler("H. Maier", 68);
        TennisSpieler schmid = new TennisSpieler("G. Schmid", 45, maier);
        TennisSpieler berger = new TennisSpieler("I. Berger", 36, schmid);

        System.out.println("Altersdifferenz von Maier: " + maier.altersDifferenz(70));
        System.out.println("Ist Schmid letzter Spieler? " + schmid.istLetzter());
        System.out.println("Startnummer von Berger: " + berger.getStartNummer());

        System.out.println(maier.toString());
        System.out.println(schmid.toString());
        System.out.println(berger.toString());
    }
}
