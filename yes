import java.util.Scanner;

public class GetPassword {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        System.out.print("Geben Sie den Satz ein: ");
        String input = scanner.nextLine();
        String[] words = input.split("\\s+");
        StringBuilder password = new StringBuilder();
        for (String word : words) {
            if (!word.isEmpty()) {
                char lastChar = word.charAt(word.length() - 1);
                if (Character.isLetter(lastChar)) {
                    char c = (Character.isUpperCase(lastChar)) ? Character.toLowerCase(lastChar) : Character.toUpperCase(lastChar);
                    password.append(c);
                } else {
                    password.append(lastChar);
                }
            }
        }
        System.out.println("Das Passwort ist: " + password.toString());
    }
}
