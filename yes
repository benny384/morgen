package Schiffeversenken;

public class Shot {
    private int x;
    private int y;
    private boolean hit;

    public Shot(int x, int y) {
        this.x = x;
        this.y = y;
        this.hit = false;
    }

    public int getX() {
        return x;
    }

    public int getY() {
        return y;
    }

    public boolean isHit() {
        return hit;
    }

    public void setHit(boolean hit) {
        this.hit = hit;
    }

    public void markShipHit(Gameboard gameboard) {
        gameboard.markShipCoordinate(x, y, "S");
        System.out.println("Hit at coordinates (" + x + ", " + y + ")!");
    }
}

