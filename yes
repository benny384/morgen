public class TestBin√§reSuche {
    public static void main(String[] args) {
        int[] zahlen = {5, 7, 8, 15, 17, 19, 25, 100, 102, 145};
        int gesucht = 19;
        int ergebnis = sucheBinaer(zahlen, gesucht, 0, zahlen.length - 1);
        System.out.println("Index des gesuchten Elements: " + ergebnis);
    }

    public static int sucheBinaer(int[] zahlen, int gesucht, int low, int high) {
        if (low <= high) {
            int mitte = low + (high - low) / 2;

            if (zahlen[mitte] == gesucht) {
                return mitte;
            } else if (zahlen[mitte] < gesucht) {
                return sucheBinaer(zahlen, gesucht, mitte + 1, high);
            } else {
                return sucheBinaer(zahlen, gesucht, low, mitte - 1);
            }
        } else {
            return -1;  // Element nicht gefunden
        }
    }
}