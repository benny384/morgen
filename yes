public boolean fireShot(Coordinate coordinate) {
        int x = coordinate.getX();
        int y = coordinate.getY();
        if (board[x][y] == 'X') {
            board[x][y] = 'H'; // 'H' für getroffen
            return true;
        } else {
            board[x][y] = 'M'; // 'M' für verfehlt
            return false;
        }
    }